@model RealWealth.Models.Reports
@{
    ViewBag.Title = "DownLineList";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@using (Html.BeginForm("DownLineList", "Downline", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="row layout-top-spacing">
            <div class="col-lg-12 col-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>Direct List</h4>
                                <span class="text-danger">
                                    @TempData["pin"]
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area">
                        <div class="widget-content widget-content-area br-6">

                            <div class="row">
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label>  Name </label>
                                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label>From Date  </label>
                                        @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label>To Date  </label>
                                        @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                                @*<div class="col-md-3">
                                    <div class="form-group">
                                        <label>Leg</label>
                                        @Html.DropDownListFor(m => m.Leg, new SelectList(ViewBag.ddlleg, "Value", "Text"), new { @class = "form-control" })
                                    </div>
                                </div>*@
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Status</label>
                                        @Html.DropDownListFor(m => m.Status, new SelectList(ViewBag.ddlStatus, "Value", "Text"), new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <br />
                                        <input type="submit" id="btnSearch" class="btn btn-success pull-left" name="Search" value="Search" />
                                    </div>
                                </div>
                            </div>
                            <!-- /.panel-heading -->
                            <div class="table-responsive">
                                <table class="table mb-0" id="example23">
                                    <thead>
                                        <tr>
                                            <th>Sr No.</th>

                                            <th>Login Id</th>
                                            <th>Name</th>
                                            <th>Leg</th>
                                            <th>Joining Date</th>
                                            <th>Package</th>
                                            <th>Activation Date</th>
                                            <th>Mobile No</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            if (Model.lstassociate != null)
                                            {
                                                int i = 1;
                                                foreach (var Item in Model.lstassociate)
                                                {
                                                    <tr class="text-left">
                                                        <td>@i</td>

                                                        <td>@Item.LoginId</td>
                                                        <td>@Item.Name</td>
                                                        <td>@Item.Leg</td>
                                                        <td>@Item.JoiningDate</td>
                                                        <td>@Item.Package</td>
                                                        <td>@Item.PermanentDate</td>
                                                        <td>@Item.Mobile</td>

                                                        <td>@Item.Status</td>

                                                    </tr>
                                                    i++;
                                                }

                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script src="../vendor/jquery/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">
<script>

    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });
</script>
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });

    });
</script>