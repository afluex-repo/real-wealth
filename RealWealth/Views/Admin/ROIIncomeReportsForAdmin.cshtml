@model RealWealth.Models.Admin

@{
    ViewBag.Title = "ROIIncomeReportsForAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ROIIncomeReportsForAdmin", "Admin", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="row layout-top-spacing">
            <div class="col-lg-12 col-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>ROI Income</h4>
                                <span class="text-danger">
                                    @TempData["ROIIncome"]
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group row">
                                    <div class="col-sm-9">
                                        From Date
                                        @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @Placeholder = "From Date", @readonly = true })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group row">
                                    <div class="col-sm-9">
                                        To Date
                                        @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @Placeholder = "To Date", @readonly = true })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4" style="margin-top:25px;">
                                <div class="form-group">
                                    <input class="btn btn-success pull-left" type="submit" value="Search" id="Search" name="Search" />
                                </div>
                            </div>
                            <table id="html5-extension" class="table table-hover non-hover" style="width:100%" data-page-length='20'>
                                <thead>
                                    <tr>
                                        <th>S No.</th>
                                        <th>Login Id</th>
                                        <th>Name</th>
                                        <th>TopUp Date</th>
                                        <th>TopUp Amount</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstROIIncome != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstROIIncome)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.LoginId</td>
                                                    <td>@Item.Name</td>
                                                    <td>@Item.Date</td>
                                                    <td>@Item.TopUpAmount</td>
                                                    <td><a href="/Admin/ViewROIForAdmin?Id=@Item.ROIId&UserId=@Item.Fk_UserId" cl class="btn btn-info btn-sm">View TPS</a></td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script src="~/plugins/flatpickr/flatpickr.js"></script>
<script src="~/plugins/flatpickr/custom-flatpickr.js"></script>
<link href="~/plugins/flatpickr/flatpickr.css" rel="stylesheet" type="text/css">
<link href="~/plugins/flatpickr/custom-flatpickr.css" rel="stylesheet" type="text/css">
