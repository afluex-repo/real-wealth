@model RealWealth.Models.Admin


@{
    ViewBag.Title = "AdvanceDeductionList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("AdvanceDeductionList", "Admin", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="row layout-top-spacing">
            <div class="col-lg-12 col-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>Advance Deduction List</h4>

                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area">
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>Login Id  </label>
                                    @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", @placeholder = "Login Id" })
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>Type</label>
                                    <input type="hidden" id="DType" value="@Model.DeductionType" />

                                    <select id="DeductionType" name="DeductionType" class="form-control">
                                        <option value="">-Select-</option>
                                        <option value="Advance">Advance</option>
                                        <option value="Deduction">Deduction</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <br />
                                    <input type="submit" id="btnSearch" class="btn btn-success pull-left" name="Search" value="Search" style="margin-top:15px;" />
                                </div>
                            </div>
                        </div>
                        <div class="widget-content widget-content-area br-6">
                            <table id="html5-extension" class="table table-hover non-hover" style="width:100%" data-page-length='20'>
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>Login Id</th>
                                        <th>Name</th>
                                        <th>Amount</th>
                                        <th>Narration</th>
                                        <th>Type</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstdeduction != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstdeduction)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.LoginId</td>
                                                    <td>@Item.Name</td>
                                                    <td>@Item.Amount</td>
                                                    <td>@Item.Narration</td>
                                                    <td>@Item.DeductionType</td>
                                                </tr>
                                                i++;
                                            }

                                        }
                                    }
                                </tbody>

                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script src="~/plugins/flatpickr/flatpickr.js"></script>
<script src="~/plugins/flatpickr/custom-flatpickr.js"></script>
<script src="~/RealWealthWebsite/assets/js/jquery.min.js"></script>
<script>
    if ($("#DType").val() != "") {
        $("#DeductionType").val($("#DType").val()).attr("selected", "selected");
    }
</script>


