                                <div class="form-row">
                                    <div class="col-md-6 mb-2">
                                        <label for="City">Gender</label>
                                        @Html.DropDownListFor(m => m.Gender, new SelectList(ViewBag.Gender, "Value", "Text"),"-Select-", new { @class = "form-control" })
                                    </div>
                                    <div class="col-md-6">
                                        <label for="PinCode">PinCode</label>
                                        @Html.TextBoxFor(m => m.PinCode, new { @class = "form-control", @placeholder = "PinCode", @onchange = "return getstatecity()" })
                                    </div>
                                </div>
                                <div class="form-row">
                                  
                                    <div class="col-md-6 mb-5">
                                        <label for="City">City</label>
