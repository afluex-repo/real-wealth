    <script>
        function getsponsordetails(obj) {
            $("#divload").css({ 'display': '' });
            $(".errortext").removeClass("errortext");
            $.ajax({
                url: '/Home/GetSponserDetails',
                type: 'GET',
                dataType: 'JSON',
                data: { 'ReferBy': $(obj).val() },
                success: function (response) {
                    if (response.Result == "Yes") {
                        $('#SponsorName').val(response.DisplayName);
                    }
                    else {

                        $("#SponsorId").addClass('errortext');
                        $('#SponsorName').val('');
                        $('#SponsorId').val('');
                        $('#SponsorId').focus();
                        alert(response.Result);
                    }
                }
            })
        }
        function isNumberKey(evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode;
            if (charCode != 46 && charCode > 31
              && (charCode < 48 || charCode > 57))
                return false;
            return true;
        }
        function confirmregistration() {
            $(".errortext").removeClass("errortext");
            if ($('#SponsorId').val() == '') {
                $("#SponsorId").addClass('errortext');
                $('#SponsorId').focus();
                return false;
            }
            if ($('#FirstName').val() == '') {
                $("#FirstName").addClass('errortext');
                $('#FirstName').focus();
                return false;
            }
            if ($('#MobileNo').val() == '') {
                $("#MobileNo").addClass('errortext');
                $('#MobileNo').focus();
                return false;
            }
            if ($('#Email').val() == '') {
                $("#Email").addClass('errortext');
                $('#Email').focus();
                return false;
            }
            if ($('#Password').val() == '') {
                $("#Password").addClass('errortext');
                $('#Password').focus();
                return false;
            }
            $("#MobileNo").attr("disabled", "disabled");
            $("#FirstName").attr("disabled", "disabled");
            $("#SponsorId").attr("disabled", "disabled");
            $("#LastName").attr("disabled", "disabled");
            $("#PinCode").attr("disabled", "disabled");
            $("#Password").attr("disabled", "disabled");
            $("#ConfirmPassword").attr("disabled", "disabled");
            $("#Gender").attr("disabled", "disabled");
            $("#Email").attr("disabled", "disabled");
            $('#Confirm').attr("disabled", "disabled");
            $('#Confirm').hide();
            $('#Edit').show();
            $('#Register').show();
        }
        function editregistration() {
            $("#MobileNo").attr("disabled", false);
            $("#FirstName").attr("disabled", false);
            $("#LastName").attr("disabled", false);
            $("#SponsorId").attr("disabled", false);
            $("#LastName").attr("disabled", false);
            $("#PinCode").attr("disabled", false);
            $("#Password").attr("disabled", false);
            $("#ConfirmPassword").attr("disabled", false);
            $("#Gender").attr("disabled", false);
            $("#Email").attr("disabled", false);
            $('#Confirm').show();
            $('#Confirm').attr("disabled", "disabled");
            $('#Edit').hide();
            $('#Register').hide();

        }

        function saveregistration() {
            $('#Register').attr("disabled", "disabled");
            $("#divload").css({ 'display': '' });
            var Leg = "";
            if ($('#left').prop('checked')) {
                Leg = "L";
            }
            else {
                Leg = "R";
            }
            $.ajax({
                url: "/Home/RegistrationAction",
                Type: "Get",
                DataType: "JSON",
                data: { SponsorId: $("#SponsorId").val(), FirstName: $("#FirstName").val(), LastName: $("#LastName").val(), MobileNo: $("#MobileNo").val(), PinCode: $("#PinCode").val(), Leg: Leg, Password: $("#Password").val(), Email: $("#Email").val(), Gender: $("#Gender").val(), State: $("#State").val(), City: $("#City").val() },
                success: function (data) {
                    if (data.Result == "1") {
                        window.location.href = '@Url.Action("ConfirmRegistration", "Home")';
                    }
                    else {
                        $("#divload").css({ 'display': 'none' });
                        alert(data.Result);
                    }
                }

            });
        }
        function getstatecity() {
            $(".errortext").removeClass("errortext");
            $.ajax({
                url: "/Home/GetStateCity",
                Type: "Get",
                DataType: "JSON",
                data: { PinCode: $("#PinCode").val() },
                success: function (data) {
                    if (data.Result == "1") {
                        $("#State").val(data.State);
                        $("#City").val(data.City);
                    }
                    else {
                        $("#State").val('');
                        $("#City").val('');
                        $("#PinCode").val('');
                        $("#PinCode").addClass('errortext');
                        $('#PinCode').focus();
                        alert(data.Result);

                    }
                }
            });
        }
        function isNumberKey(evt) {

            var charCode = (evt.which) ? evt.which : event.keyCode;
            if (charCode != 46 && charCode > 31
            && (charCode < 48 || charCode > 57))
                return false;

            return true;
        }
        function validateConfPassword() {
            var password = $('#Password').val();
            var ConfirmPassword = $('#ConfirmPassword').val();
            if (password != ConfirmPassword) {
                $("#Password").addClass('errortext');
                $("#ConfirmPassword").addClass('errortext');
                $('#Password').val('');
                $('#ConfirmPassword').val('');
                alert("Password and Confirm Password are different")
                return false;
            }
        }
    </script>

