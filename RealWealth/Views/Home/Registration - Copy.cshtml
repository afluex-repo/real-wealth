    <div class="form-container outer">
        <div class="form-form">
            <div class="form-form-wrap">
                <div class="form-container">
                  
                    <div class="form-content">
                        <div class="maintanence-hero-img">
                            <img alt="logo" src="~/assets/img/tradelogo.png">
                        </div>
                        <h1 class="">Create An Account</h1>
                        <p class="signup-link register">Already have an account? <a href="/Home/Login">Log in</a></p>
                        <form class="text-left needs-validation" novalidate action="javascript:void(0);">
                            <div class="form">
                                <div class="form-row">
                                    @if (ViewBag.SponsorId != null && ViewBag.SponsorId != "")
                                    {
                                        <h5 style="color: black; font-size: 14px;">Congratulations! For joining us under sponsor code: @ViewBag.SponsorId</h5>

                                        <input type="hidden" value="@ViewBag.SponsorId" id="SponsorId" name="SponsorId" />
                                    }
                                    else
                                    {
                                        <div class="col-md-6 mb-2">
                                            <label for="SponsorId">SponsorId </label> <span class="text-danger">*</span>
                                            @Html.TextBoxFor(m => m.SponsorId, new { @class = "form-control", @Placeholder = "Refer By", @onchange = "getsponsordetails(this);", @required = true })
                                            @Html.ValidationMessageFor(m => m.LoginId)

                                        </div>
                                        <div class="col-md-6 mb-2">
                                            <label for="SponsorName">Sponsor name</label>
                                            @Html.TextBoxFor(m => m.SponsorName, new { @class = "form-control", @Disabled = "true" })
                                            <div class="invalid-tooltip">
                                            </div>
                                        </div>
                                    }
                                </div>
                                <div class="form-row">
                                    @*@if (ViewBag.Leg != null && ViewBag.Leg != "")
                                        {
                                            <input type="hidden" value="@ViewBag.Leg" id="Leg" name="Leg" />
                                        }
                                        else
                                        {
                                            <div class="col-md-6 mb-2">
                                                <label for="validationTooltipUsername">Leg</label> <span class="text-danger">*</span>
                                                <div class="input-group">
                                                    <div class="input-group-prepend">
                                                        <div class="form-check form-check-inline">
                                                            &nbsp;<input type="radio" value="Left" @ViewBag.LeftChecked id="left" name="Leg" />
                                                            <label for="inlineRadio1" class="pt-2 pl-2">Left</label>
                                                        </div>
                                                        <div class="form-check form-check-inline">
                                                            <input type="radio" value="Right" id="right" name="Leg" @ViewBag.RightChecked />
                                                            <label for="inlineRadio2" class="pt-2 pl-2">Right</label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }*@
                                    <div class="col-md-6 mb-2">
                                        <label for="FirstName">First Name</label> <span class="text-danger">*</span>
                                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "First Name", @required = true })

                                    </div>
                                    <div class="col-md-6 mb-2">
                                        <label for="LastName">Last Name</label>
                                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Last Name" })

                                    </div>
                                </div>
                                <div class="form-row">

                                    <div class="col-md-6 mb-2">
                                        <label for="MobileNo">Mobile No</label> <span class="text-danger">*</span>
                                        @Html.TextBoxFor(m => m.MobileNo, new { @class = "form-control", @placeholder = "MobileNo", @maxlength = "10", @onkeypress = "return isNumberKey(event);" })
                                    </div>
                                    <div class="col-md-6 mb-2">
                                        <label for="Email">Email <span class="text-danger">*</span></label>
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                                    </div>

                                </div>
                                <div class="form-row">

                                    <div class="col-md-6 mb-2">
                                        <label for="MobileNo">Password</label> <span class="text-danger">*</span>
                                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder = "Password",  @type = "Password" })
                                       
                                    </div>
                                    <div class="col-md-6 mb-2">
                                        <label for="Email">Confirm Password</label>
                                        @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password", @onblur = "return validateConfPassword();", @type = "Password" })
                                    </div>
                                    @*<label style="color:red;font-size:12px;padding-left:10px">Note: Password should be alpha-numeric.</label>*@
                                    
