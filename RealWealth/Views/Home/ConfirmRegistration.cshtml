
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no">
    <title>Confirmation Registration | CORK - Multipurpose Bootstrap Dashboard Template </title>
    <link rel="icon" type="image/x-icon" href="~/assets/img/favicon.ico" />
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="https://fonts.googleapis.com/css?family=Nunito:400,600,700" rel="stylesheet">
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/plugins.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/pages/error/style-maintanence.css" rel="stylesheet" type="text/css" />
    <!-- END GLOBAL MANDATORY STYLES -->
    <style>
        .card {
            background-image: linear-gradient(#adbaed, #e1e3ed);
            padding: 40px 20px;
            width: 500px;
        }

        .card-title {
            font-weight: 600;
        }

        .maintanence-hero-img img {
            width: 100px;
            height: 100px;
        }

        .btn:focus {
            color: #fff !important;
            background-color: #4361ee;
        }

        .maintanence a.btn {
            width: 200px;
            letter-spacing: 1px;
        }

        .foractivation-btn {
            text-align: -webkit-center;
            border-radius: 1rem;
        }

        .img-design {
            border: 2px solid white;
            border-radius: 50%;
            width: 80px;
            height: 80px;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 8px;
        }
        .cred-detail{
            color: #910f10;
        }
        h1.thank {
    font-weight: 600;
    font-size: 50px;
}
    </style>
</head>
<body class="maintanence text-center">

    <div class="container-fluid maintanence-content">

        <div class="card">
            <div class="maintanence-hero-img">
                <img alt="logo" src="~/assets/img/tradelogo.png">
            </div>
            <div class="card-body my-2">
                <h1 class="thank">Thank You @Session["DisplayName"]</h1>
                <h6 class="card-title my-2">For Your Registration. Your Details are as Below <br />
                    <span class="credential"><span class="cred-head">Login ID:</span> <span class="cred-detail">@Session["LoginId"]</span></span><br />
                    <span class="credential"><span class="cred-head">Password:</span> <span class="cred-detail">@Session["Password"]</span></span>
                
                </h6>
                <div class="d-flex justify-content-around mt-5">
                    <div class="field-wrapper">
                        <a href="/Home/CompleteRegistration" class="mr-2 btn btn-primary chaining-modals foractivation-btn py-2">
                            <div class="img-design"><img src="~/assets/img/dash.png" style="width:50px" /></div> <br />
                            <span style="white-space: nowrap">Go To Dashboard</span>
                        </a>
                    </div>

                    <div class="field-wrapper">
                        <a href="/Home/Registration" target="_blank" class="btn btn-info foractivation-btn py-2">
                            <div class="img-design"><img src="~/assets/img/addnew.png" style="width:50px" /></div> <br />
                            <span style="white-space: nowrap">Add New</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- BEGIN GLOBAL MANDATORY SCRIPTS -->
    <script src="~/assets/js/libs/jquery-3.1.1.min.js"></script>
    <script src="~/bootstrap/js/popper.min.js"></script>
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
    <!-- END GLOBAL MANDATORY SCRIPTS -->
</body>

</html>