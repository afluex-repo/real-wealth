@model RealWealth.Models.AdminReports

@{
    ViewBag.Title = "WalletLedger";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("WalletLedger", "AdminReports", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="row layout-top-spacing">
            <div class="col-lg-12 col-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>Member Wallet Reports</h4>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area">
                        <div class="row">
                            <div class="col-lg-3">
                                Login Id
                                @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", @Placeholder = "Login Id" })
                            </div>
                            <div class="col-lg-3">
                                Name
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @Placeholder = "Name" })
                            </div>
                            <div class="col-lg-3">
                                <br />
                                <input class="btn btn-success" type="submit" value="Search" name="Search" id="btnSearch" />
                            </div>
                        </div>
                  
                            <table id="html5-extension" class="table table-hover non-hover" style="width:100%" data-page-length='20'>
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>Login Id</th>
                                        <th>Name</th>
                                        <th>Cr Amount</th>
                                        <th>Dr Amount</th>
                                        <th>Available Balance</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstWalletLedger != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstWalletLedger)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.LoginId</td>
                                                    <td>@Item.Name</td>
                                                    <td>@Item.CrAmount</td>
                                                    <td>@Item.DrAmount</td>
                                                    <td>@Item.AvailableBalance</td>
                                                    <td><a target="_blank" class="btn btn-info btn-sm" href="/Admin/ViewLedger?Fk_UserId=@Item.UserId">View Ledger</a></td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th></th>
                                        <th></th>
                                        <th>Total </th>
                                        <th>@ViewBag.CrAmount</th>
                                        <th>@ViewBag.DrAmount</th>
                                        <th>@ViewBag.AvailableBalance</th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
   
}
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js" type="text/javascript"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js" type="text/javascript"></script>
<link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="Stylesheet" type="text/css" />
<script>

    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });
</script>
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });

    });
</script>





