@model RealWealth.Models.AdminReports

@{
    ViewBag.Title = "ActivateByPaymentList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
     td#used{
         white-space: break-spaces;
    }
</style>

@using (Html.BeginForm("ActivateByPaymentList", "AdminReports", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="row layout-top-spacing">
            <div class="col-lg-12 col-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>Online Payment List</h4>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area">
                        <div class="row">
                            <div class="col-lg-3">
                                Login Id
                                @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", @Placeholder = "Login Id" })
                            </div>
                            <div class="col-lg-3">
                                Name
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @Placeholder = "Name" })
                            </div>
                            <div class="col-lg-3">
                                Type
                                <input type="hidden" id="UseFor" value="@Model.UsedFor" />
                               <select id="UsedFor" name="UsedFor" class="form-control">
                                   <option value="0">Select</option>
                                   <option value="Wallet">Wallet</option>
                                   <option value="Activation">Activation</option>
                               </select>
                            </div>
                            <div class="col-lg-3">
                                <br />
                                <input class="btn btn-success" type="submit" value="Search" name="Search" id="btnSearch" />
                            </div>
                        </div><br />
                      
                            <table id="html5-extension" class="table table-hover non-hover" style="width:100%" data-page-length='20'>
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>Login Id</th>
                                        <th>Name</th>
                                        <th>Amount</th>
                                        <th>Used For</th>
                                        <th>Status</th>
                                        @*<th>BV</th>*@
                                        @*<th>IsCalculated</th>*@
                                        @*<th>TransactionBy</th>*@
                                        <th>Date</th>
                                        @*<th>Status</th>*@
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstActivateByPayment != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstActivateByPayment)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.LoginId</td>
                                                    <td>@Item.Name</td>
                                                    <td>@Item.PinAmount</td>
                                                    <td id="used">@Item.UsedFor</td>
                                                    <td>@Item.Status</td>
                                                    @*<td>@Item.BV</td>*@
                                                    <th>@Item.TransactionDate</th>
                                                    @*<td>@Item.IsCalculated</td>*@
                                                    @*<td>@Item.TransactionBy</td>*@
                                                    @*<td>@Item.Status</td>*@
                                                </tr>
                                                i++;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js" type="text/javascript"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js" type="text/javascript"></script>
<link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="Stylesheet" type="text/css" />
<script>

    if ($("#UseFor").val() != 0) {
        $("#UsedFor").val($("#UseFor").val()).attr("selected", "selected")
    }
    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });
</script>
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });

    });
</script>




