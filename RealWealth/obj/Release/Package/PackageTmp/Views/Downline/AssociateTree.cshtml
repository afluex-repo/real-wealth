@model MyTrade.Models.AssociateBooking

@{
    ViewBag.Title = "AssociateTree";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
@using (Html.BeginForm("AssociateTree", "User", FormMethod.Post, new { @id = "form1" }))
{
    <div class="container">
        <div class="row layout-top-spacing">
            <div class="col-lg-12 col-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <h4>Direct List</h4>
                                </div>
                                </div>
                            <div class="col-md-8">

                                <div class="form-group" style="float:right">
                                    @if (@ViewBag.LoginId != Session["LoginId"].ToString())
                                    {
                                        <h4>
                                            <a href="/Downline/AssociateTree?AssociateID=@ViewBag.Fk_SponsorId" id="btnDown" class="btn btn-info btn-sm">Back</a></h4>
    }
</div>
                            </div>
                        </div>
                        
                                <!-- HTML5 Export Buttons table start -->
                        <div class="widget-content widget-content-area">
                            <div class="row">
                                <div class="col-md-12">
                                    <table id="basic-btn" class="table table-striped table-bordered nowrap">
                                        <thead>
                                            <tr>
                                                <th>S No.</th>
                                                <th>LoginId</th>
                                                <th>Name</th>
                                                <th>Sponsor Id</th>
                                                <th>Sponsor Name</th>
                                                <th>Status</th>
                                                <th>Level</th>
                                                <th>Activation Date</th>
                                                <th></th>

                                                @*<th>S No.</th>
                                <th></th>
                                <th>Sponsor Id</th>
                                <th>Sponsor Name</th>
                                <th>LoginId</th>
                                <th>Name</th>
                                <th>Status</th>
                                <th>Activation Date</th>*@
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model != null)
                                                    {
                                                        if (Model.lstPlot != null)
                                                        {
                                                            int i = 1;
                                                            foreach (var Item in Model.lstPlot)
                                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.LoginId</td>
                                                    <td>@Item.FirstName</td>
                                                    <td>@Item.SponsorID</td>
                                                    <td>@Item.SponsorName</td>

                                                    <td>
                                                        @if (Item.ActiveStatus == "Inactive")
                                                                        {
                                                            <a href="#" id="btnDown" class="label label-danger">@Item.ActiveStatus</a>
                                                                        }
                                                                        else
                                                                        {
                                                            <a href="#" id="btnDown" class="label label-success">@Item.ActiveStatus</a>
                                                                        }

                                                    </td>
                                                    <td>@Item.Lvl</td>
                                                    <td>@Item.ActivationDate</td>
                                                    <td>
                                                        @if (Item.Status == "Down")
                                                                        {

                                                            <a href="/Downline/AssociateTree?AssociateID=@Item.Fk_UserId" id="btnDown" class="btn btn-primary btn-sm">Next</a>
                                                                        }
                                                                        else
                                                                        {
                                                            @*<a href="#" id="btnDown" class="btn btn-success btn-sm">Self</a>*@
                                                                        }


                                                    </td>
                                                </tr>
                                                                i++;
                                                            }
                                                        }
                                                    }
                                        </tbody>
                                        @*<tfoot>
                            <tr>
                                <th>S No.</th>
                                <th>LoginId</th>
                                <th>Name</th>
                                <th>Sponsor Id</th>
                                <th>Sponsor Name</th>
                                <th>Status</th>
                                <th>Activation Date</th>
                                <th></th>
                            </tr>
                        </tfoot>*@
                                    </table>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
