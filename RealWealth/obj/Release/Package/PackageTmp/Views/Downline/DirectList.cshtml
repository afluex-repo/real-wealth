@model MyTrade.Models.Reports
@{
    ViewBag.Title = "DirectList";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
@using (Html.BeginForm("DirectList", "Downline", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="row layout-top-spacing">
            <div class="col-lg-12 col-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>DownTeam Tree</h4>
                                <span class="text-danger">
                                    @TempData["pin"]
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area">
                     

                            <div class="row">
                                @*<div class="col-lg-3">
                                    <div class="form-group">
                                        <label>  Name </label>
                                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                    </div>
                                </div>*@
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label>From Date  </label>
                                        @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control",@readonly=true })
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label>To Date  </label>
                                        @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @readonly = true })
                                    </div>
                                </div>
                                @*<div class="col-md-3">
                                        <div class="form-group">
                                            <label>Leg</label>
                                            @Html.DropDownListFor(m => m.Leg, new SelectList(ViewBag.ddlleg, "Value", "Text"), new { @class = "form-control" })
                                        </div>
                                    </div>*@
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Status</label>
                                        @Html.DropDownListFor(m => m.Status, new SelectList(ViewBag.ddlStatus, "Value", "Text"), new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Self/Team</label>
                                        <input type="hidden" id="hdf" value="@Model.DirectStatus">
                                        <select id="DirectStatus" name="DirectStatus" class = "form-control">
                                            <option value="0">-select-</option>
                                            <option value="Self">Self</option>
                                            <option value="Team">Team</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-3" style="margin-top:15px;">
                                    <div class="form-group">
                                        <br />
                                        <input type="submit" id="btnSearch" class="btn btn-success pull-left" name="Search" value="Search" />
                                    </div>
                                </div>
                            </div>
                            <center>
                                <div>
                                    @if (Model != null)
                                    {
                                        if ( Model.lstassociate != null)
                                        {
                                            <a href="/Downline/DirectList?Ids=@Model.Ids" id="btnDown" class="btn btn-info btn-sm">Next</a>
                                        }
                                        else if (Model.lstassociate == null)
                                        {
                                            <a href="/Downline/DirectList" id="btnDown" class="btn btn-info btn-sm">Back</a>
                                        }
                                    }
                                </div>
                            </center>

                            <!-- /.panel-heading -->
                            <div class="table-responsive">
                                <table class="table table-hover non-hover" data-page-length='20' id="html5-extension">
                                    <thead>
                                        <tr>
                                            <th>Sr No.</th>
                                            <th>LoginId</th>
                                            <th>Name</th>
                                            <th>Sponsor Id</th>
                                            <th>Sponosor Name</th>
                                            @*<th>Leg</th>*@
                                            @*<th>Joining Date</th>*@
                                            <th>Package</th>
                                            <th>Activation Date</th>
                                            <th>Level</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            if (Model.lstassociate != null)
                                            {
                                                int i = 1;
                                                foreach (var Item in Model.lstassociate)
                                                {
                                                    <tr class="text-left">
                                                        <td>@i</td>

                                                        <td>@Item.LoginId</td>
                                                        <td>@Item.Name</td>
                                                        <td>@Item.SponsorId</td>
                                                        <td>@Item.SponsorName</td>
                                                        @*<td>@Item.Mobile</td>
                                                            <td>@Item.Email</td>*@
                                                        @*<td>@Item.Leg</td>*@
                                                        @*<td>@Item.JoiningDate</td>*@
                                                        <td>@Item.Package</td>
                                                        <td>@Item.PermanentDate</td>
                                                        <td>@Item.Level</td>
                                                        <td>@Item.Status</td>

                                                    </tr>
                                                    i++;
                                                }

                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js" type="text/javascript"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js" type="text/javascript"></script>
<link href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="Stylesheet" type="text/css" />

<script>
    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });
</script>
<script>
    $(document).ready(function () {
        $("#DirectStatus").val($("#hdf").val()).attr("selected", "selected");
        $('#dataTables-example').DataTable({
            responsive: true
        });

    });
</script>