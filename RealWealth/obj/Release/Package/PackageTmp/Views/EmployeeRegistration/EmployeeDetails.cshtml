@model MyTrade.Models.EmployeeRegistrations

@{
    ViewBag.Title = "EmployeeDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("EmployeeDetails", "EmployeeRegistration", FormMethod.Post, new { @id = "form1" }))
{
    <div class="container">
        <div class="row layout-top-spacing">
            <div class="col-lg-12 col-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>Employee Details</h4>
                                <span class="text-danger">@TempData["EmployeeDetails"] </span>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area">
             
                            <table id="html5-extension" class="table table-hover non-hover" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>Name</th>
                                        <th> Login Id</th>
                                        <th>Password</th>
                                        <th>Qualififcation</th>
                                        <th>Contact No</th>
                                        <th>Email Id</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstemp != null)
                                        {
                                            int i = 1;
                                            foreach (var item in Model.lstemp)
                                            {

                                                <tr>
                                                    <td>@i</td>
                                                    <td>@Html.DisplayFor(m => item.Name)</td>
                                                    <td>@Html.DisplayFor(m => item.LoginId)</td>
                                                    <td>@Html.DisplayFor(m => item.Password)</td>
                                                    <td>@Html.DisplayFor(m => item.EducationQualififcation)</td>
                                                    <td>@Html.DisplayFor(m => item.Mobile)</td>
                                                    <td>@Html.DisplayFor(m => item.Email)</td>
                                                    <td>
                                                        <a href="/EmployeeRegistration/EmployeeRegistration?LoginID=@item.LoginId" class="btn btn-info btn-sm">
                                                            Edit
                                                        </a>
                                                
                                                        @if (item.Status == "Inactive")
                                                        {
                                                        <a href="/EmployeeRegistration/ActivateEmployee?LoginId=@item.LoginId" class="btn btn-success btn-sm" onclick="return confirm('Sure you want to activate this User ?')">
                                                            Activate
                                                        </a>
                                                        }
                                                        else
                                                        {
                                                        <a href="/EmployeeRegistration/DeactivateEmployee?LoginId=@item.LoginId" class="btn btn-danger btn-sm" onclick="return confirm('Sure you want to deactivate this User ?')">
                                                            Deactivate
                                                        </a>
                                                        }
                                                    </td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                    }
                                </tbody>



                            </table>
                       

                    </div>
                </div>
            </div>
        </div>
    </div>
}

