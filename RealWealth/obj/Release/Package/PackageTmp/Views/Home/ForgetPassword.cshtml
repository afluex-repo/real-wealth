<body class="form">
    <div class="form-container outer">
        <div class="form-form">
            <div class="form-form-wrap">
                <div class="form-container">
                    <div class="form-content">
                        <div class="maintanence-hero-img">
                            <img alt="logo" src="~/assets/img/tradelogo.png">
                        </div>
                        <h1 class="">Forget Password</h1><br />
                        @*<p class="">Log in to your account to continue.</p>*@
                        @using (Html.BeginForm("ForgetPassword", "Home", FormMethod.Post, new { @id = "Form1" }))
                        {
                            <div id="username-field" class="field-wrapper input">
                                <div class="d-flex justify-content-between">
                                    <label for="password">Email</label>
                                </div>
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @Placeholder = "Email Id" })
                            </div>
                                <div class="d-sm-flex justify-content-between">
                                    <div class="field-wrapper">
                                        <input type="submit" id="forgetpassword" class="btn btn-primary float-right btn-inline" name="forgetpassword" value="Submit" onclick="return validateform();" />
                                     
                                    </div>
                                </div>
                                <div class="division">
                                    <span class="text-danger"> @TempData["Login"] </span><br />
                                    <span>OR</span>
                                </div>
                                <p class="signup-link">Back To <a href="/Home/Login">Log In</a></p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
