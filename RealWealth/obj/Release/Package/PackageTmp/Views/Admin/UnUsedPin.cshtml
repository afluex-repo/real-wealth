@model MyTrade.Models.Admin

@{
    ViewBag.Title = "UnUsedPin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("UnUsedPin", "Admin", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="row layout-top-spacing">
            <div class="col-lg-12 col-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-sm-4">
                                @*<h4>E-Pin List</h4>*@
                            </div>
                            <div class="col-sm-4">
                                <a href="/Admin/UnUsedPinList" class="btn btn-info btn-sm">Back</a>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area">
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>Owner ID </label>
                                    @Html.TextBoxFor(m => m.OwnerID, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>Registered To ID </label>
                                    @Html.TextBoxFor(m => m.RegisteredTo, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>ePinNo </label>
                                    @Html.TextBoxFor(m => m.ePinNo, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>Status  </label>
                                    @Html.HiddenFor(m => m.Fk_UserId)
                                    @Html.HiddenFor(m => m.Fk_ProductId)
                                    <input type="hidden" id="stt" value="@Model.Status" />
                                    <select id="Status" name="Status" class="form-control">
                                        <option value="">-Select-</option>
                                        <option value="P">Used</option>
                                        <option value="TR">Transfer</option>
                                        <option value="T">Available</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">

                            <div class="col-lg-3">
                                <div class="form-group">
                                    <br />
                                    <input type="submit" id="btnSearch" class="btn btn-success pull-left" name="Search" value="Search" />
                                </div>
                            </div>
                        </div>
                        <div class="widget-content widget-content-area br-6">
                            <h6 style="color:red">LoginId: @Model.LoginId &nbsp;&nbsp;Name: @Model.Name</h6>
                            @if (Model.Status == "TR")
                            {
                                <table class="table table-bordered w-100 mb-0" id="html5-extension" data-page-length='20'>
                                    <thead>
                                        <tr>
                                            <th>Sr No.</th>
                                            <th>EPin No</th>
                                            <th>Pin Amount</th>
                                            <th>To Id</th>
                                            <th>To Name</th>
                                            <th>Transfer Date</th>
                                            <th>Generate Via</th>
                                        </tr>

                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            if (Model.lstunusedpins != null)
                                            {
                                                int i = 1;
                                                foreach (var Item in Model.lstunusedpins)
                                                {
                                                    <tr class="text-left">

                                                        <td>
                                                            @i
                                                        </td>
                                                        <td>@Item.ePinNo</td>
                                                        <td>@Item.Amount</td>
                                                        <td>@Item.ToId</td>
                                                        <td>@Item.ToName</td>
                                                        <td>@Item.TransferDate</td>
                                                        <td>@Item.AddedBy</td>
                                                    </tr>
                                                    i++;
                                                }

                                            }
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <table id="html5-extension" class="table table-hover non-hover" style="width:100%" data-page-length='20'>
                                    <thead>
                                        <tr>
                                            <th>Sr No.</th>
                                            <th>E-Pin No</th>
                                            <th>Pin Amount</th>
                                            <th>GST</th>
                                            <th>Total Amount</th>
                                            <th class="dt-no-sorting">Status</th>
                                            @*<th>Package</th>*@
                                            @*<th>Owner</th>*@
                                            <th>Generated Date</th>
                                            @if (Model.Status == "P")
                                            {
                                            <th>Activation Date</th>
                                                <th>Registered To</th>
                                            }
                                            <th>Generate Via</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            if (Model.lstunusedpins != null)
                                            {
                                                int i = 1;
                                                foreach (var Item in Model.lstunusedpins)
                                                {
                                                    <tr class="text-left">
                                                        <td>@i</td>
                                                        <td>@Item.ePinNo</td>
                                                        <td>@Item.Amount</td>
                                                        <td>@Item.GST</td>
                                                        <td>@Item.TotalAmount</td>
                                                        <td>@Item.Status</td>
                                                        @*<td>@Item.Package</td>*@
                                                        @*<td> @Item.DisplayName</td>*@
                                                        <td>@Item.AddedOn</td>
                                                        @if (Item.Status == "Used")
                                                        {
                                                            <td> @Item.ActivationDate </td>
                                                            <td> @Item.RegisteredTo </td>
                                                        }
                                                        <td>@Item.AddedBy</td>
                                                    </tr>
                                                    i++;
                                                }

                                            }
                                        }

                                    </tbody>

                                </table>
                            }
                            

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script src="~/plugins/flatpickr/flatpickr.js"></script>
<script src="~/plugins/flatpickr/custom-flatpickr.js"></script>
<script src="~/MyTradeWebsite/assets/js/jquery.min.js"></script>
<script>
    if ($("#stt").val() != "") {
        $("#Status").val($("#stt").val()).attr("selected", "selected");
    }
</script>