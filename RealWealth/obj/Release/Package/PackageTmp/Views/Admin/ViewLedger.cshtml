@model MyTrade.Models.Admin

@{
    ViewBag.Title = "ViewLedger";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ViewLedger", "Admin", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="row layout-top-spacing">
            <div class="col-lg-12 col-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-sm-4">
                                <h4>View Ledger</h4>
                            </div>
                            <div class="col-sm-8">
                                <div class="form-group" style="float: right;">
                                    <h4>
                                        <a href="/AdminReports/WalletLedger" class="btn btn-info btn-sm">Back</a>
                                    </h4>
                                </div>
                                </div>
                            </div>
                    </div>
                  
                        <div class="widget-content widget-content-area br-6">
                            <div class="row">
                                <div class="col-sm-3">
                                 <p style="color:#2196f3"><b>Login Id : @ViewBag.LoginId</b></p>
                                </div>
                                <div class="col-sm-3">
                                    <p  style="color:#2196f3"><b>Name : @ViewBag.Name</b></p>
                                </div>
                            </div>
                            <table id="html5-extension" class="table table-hover non-hover" style="width:100%" data-page-length='20'>
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        @*<th>Login Id</th>
                                        <th>Name</th>*@
                                        <th>Narration</th>
                                        <th>Cr Amount</th>
                                        <th>Dr Amount</th>
                                        <th>Balance</th>
                                        <th>TransactionBy</th>
                                        <th>Transaction No</th>
                                        <th>Transaction Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstViewLedger != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstViewLedger)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    @*<td>@Item.LoginId</td>
                                                    <td>@Item.Name</td>*@
                                                    <td>@Item.Narration</td>
                                                    <td>@Item.CrAmount</td>
                                                    <td>@Item.DrAmount</td>
                                                    <td>@Item.Balance</td>
                                                    <td>@Item.TransactionBy</td>
                                                    <td>@Item.TransactionNo</td>
                                                    <td>@Item.TransactionDate</td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        @*<th></th>
                                        <th></th>*@
                                        <th></th>
                                        <th>Total </th>
                                        <th>@ViewBag.CrAmount</th>
                                        <th>@ViewBag.DrAmount</th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    
                </div>
            </div>
        </div>
    </div>
}
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js" type="text/javascript"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js" type="text/javascript"></script>
<link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="Stylesheet" type="text/css" />
<script>

    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });
</script>
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });

    });
</script>






