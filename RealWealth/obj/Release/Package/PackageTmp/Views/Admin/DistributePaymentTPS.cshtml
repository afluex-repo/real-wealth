@model MyTrade.Models.Admin


@{
    ViewBag.Title = "DistributePaymentTPS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="~/plugins/flatpickr/flatpickr.css" rel="stylesheet" type="text/css">
<link href="~/plugins/flatpickr/custom-flatpickr.css" rel="stylesheet" type="text/css">

@using (Html.BeginForm("DistributePaymentTPS", "Admin", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="row layout-top-spacing">
            <div class="col-lg-12 col-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>Distribute Payment TPS</h4>
                                <span class="text-danger">
                                    @TempData["msg"]
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area">
                        <div class="row">
                            <div class="col-lg-3 col-md-3" style="margin-left:10px">
                                <div class="form-group">
                                    <label>Last Closing Date : </label>
                                    @Html.DisplayFor(m => m.LastClosingDate)
                                    <br />
                                    <label>Last Payout No : </label>
                                    @Html.DisplayFor(m => m.PayoutNo)
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-3">
                                <div class="form-group">
                                    <label> Clossing Date</label>
                                    @Html.TextBoxFor(m => m.ClosingDate, new { @class = "form-control", @Placeholder = "Closing Date" })

                                </div>
                            </div>
                            <div class="col-lg-3 col-md-3" style="margin-top:28px">
                                <div class="form-group">
                                    <input class="btn btn-success pull-left" type="submit" value="Get Details" id="GetDetails" name="GetDetails" onclick="return Validate()" />
                                    @*<input type="submit" class="btn btn-success" value="Distribute Payment TPS" name="btnSearch" onclick="return Validate()"  />*@
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <table id="html5-extension" class="table table-hover non-hover",data-page-length='25'>
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>Login Id</th>
                                        <th>Name</th>
                                        <th>TPS</th>
                                        <th>Gross Amount</th>
                                        <th>TDS Amount</th>
                                        <th>Processing</th>
                                        <th>Net Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstDistributePaymentTPP != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstDistributePaymentTPP)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.LoginId</td>
                                                    <td>@Item.Name</td>
                                                    <td>@Item.TPS</td>
                                                    <td>@Item.GrossAmount</td>
                                                    <td>@Item.ProcessingFee</td>
                                                    <td>@Item.TDSAmount</td>
                                                    <td>@Item.NetAmount</td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th>@ViewBag.TPS </th>
                                        <th>@ViewBag.GrossIncome</th>
                                        <th>@ViewBag.Processing</th>
                                        <th>@ViewBag.TDS</th>
                                        <th>@ViewBag.NetIncome</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script src="~/plugins/flatpickr/flatpickr.js"></script>
<script src="~/plugins/flatpickr/custom-flatpickr.js"></script>
<script>
  
    var f3 = flatpickr(document.getElementById('ClosingDate'),
        {
       // mode: "range"
      });

    function Validate() {
        $(".errortext").removeClass("errortext");
        if ($('#ClosingDate').val() == '') {
            $("#ClosingDate").addClass('errortext');
            $('#ClosingDate').focus();
            return false;
        }
    }
</script>







