@model MyTrade.Models.Admin

@{
    ViewBag.Title = "PayoutWalletLedgerForAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/plugins/flatpickr/flatpickr.css" rel="stylesheet" type="text/css">
<link href="~/plugins/flatpickr/custom-flatpickr.css" rel="stylesheet" type="text/css">
@using (Html.BeginForm("PayoutWalletLedgerForAdmin", "Admin", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="row layout-top-spacing">
            <div class="col-lg-12 col-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>View Ledger</h4>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area">
                        <div class="row">
                            <div class="col-sm-3">
                                <p style="color:#2196f3"><b>Login Id : @ViewBag.LoginId</b></p>
                            </div>
                            <div class="col-sm-3">
                                <p style="color:#2196f3"><b>Name : @ViewBag.Name</b></p>
                            </div>
                        </div>
                        @*<div class="row">
                            <div class="col-lg-3 col-md-3" style="margin-left:10px">
                                <div class="form-group">
                                    <label>
                                        From Date
                                    </label>
                                    @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @Placeholder = "From Date" })

                                </div>
                            </div>
                            <div class="col-lg-3 col-md-3">
                                <div class="form-group">
                                    <label> To Date</label>
                                    @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @Placeholder = "To Date" })

                                </div>
                            </div>
                            <div class="col-lg-3 col-md-3" style="margin-top:28px">
                                <div class="form-group">
                                    <input type="submit" class="btn btn-success" value="Search" name="btnSearch" />
                                </div>
                            </div>
                        </div>*@
                        <div class="row">
                            <table id="html5-extension" class="table table-hover non-hover" data-page-length='20'>
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>Narration</th>
                                        <th>Cr. Amount</th>
                                        <th>Dr. Amount</th>
                                        <th>Balance</th>
                                        <th>Transaction By</th>
                                        <th>Transaction Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lst != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lst)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.Narration</td>
                                                    <td>@Item.CrAmount</td>
                                                    <td>@Item.DrAmount</td>
                                                    <td>@Item.Balance</td>
                                                    <td>@Item.TransactionBy</td>
                                                    <td>@Item.TransactionDate</td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script src="~/plugins/flatpickr/flatpickr.js"></script>
<script src="~/plugins/flatpickr/custom-flatpickr.js"></script>
<script>
    var f3 = flatpickr(document.getElementById('FromDate'), {
        mode: "range"
    });
    var f4 = flatpickr(document.getElementById('ToDate'), {
        mode: "range"
    });
</script>




