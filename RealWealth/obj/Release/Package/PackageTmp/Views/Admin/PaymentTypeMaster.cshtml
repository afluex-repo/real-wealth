@model MyTrade.Models.Admin

@{
    ViewBag.Title = "PaymentTypeMaster";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("PaymentTypeMaster", "Admin", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="row layout-top-spacing">
            <div class="col-lg-12 col-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>Payment Type Master</h4>
                                <span class="text-danger">
                                    @TempData["msg"]
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group row">
                                    <div class="col-sm-9">
                                        PaymentType <span style="color: red">*</span>
                                            @Html.DropDownListFor(m => m.PaymentTypeId, new SelectList(ViewBag.ddlPaymentRype, "Value", "Text"), new { @class = "form-control"})
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group row">
                                    <div class="col-sm-9">
                                        Status<span style="color: red">*</span>
                                        <select  class = "form-control" id="Status" name="Status">
                                            <option value="">Select</option>
                                            <option value="1">Active</option>
                                            <option value="0">In Active</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input class="btn btn-success pull-left" type="submit" value="Submit" id="Update" name="Update" onclick="return validateform();" />
                                </div>
                            </div>
                        </div>
                       

                            <table id="html5-extension" class="table table-hover non-hover" style="width:100%" data-page-length='20'>
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>Payment Type</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstWallet != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstWallet)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.PaymentType</td>
                                                    <td>@Item.Status</td>
                                                   
                                                </tr>
                                                i++;
                                            }

                                        }
                                    }

                                </tbody>

                            </table>
                    
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js" type="text/javascript"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js" type="text/javascript"></script>
<link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="Stylesheet" type="text/css" />
<script>
    function validateform() {
        $(".errortext").removeClass("errortext");
        if ($('#PaymentType').val() == '') {
            $("#PaymentType").addClass('errortext');
            $('#PaymentType').focus();
            return false;
        }
        if ($('#Status').val() == '') {
            $("#Status").addClass('errortext');
            $('#Status').focus();
            return false;
        }
        }
</script>
<style>
    .errortext {
        border: 1px solid red !important;
        background-color: #fff0f0 !important;
    }
</style>









