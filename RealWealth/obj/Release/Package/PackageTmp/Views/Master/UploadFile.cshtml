@model MyTrade.Models.Master

@{
    ViewBag.Title = "Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("UploadFile", "Master", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="row layout-top-spacing">
            <div class="col-lg-12 col-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>Upload File</h4>
                                <span class="text-danger">
                                    @TempData["Upload"]
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="widget-content widget-content-area">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    Title<span style="color: red">*</span>
                                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @placeholder = "Title" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    File<span style="color: red">*</span>
                                    <input type="file" name="postedFile" id="postedFile" class="form-control" />
                                    <br />
                                    @*<img src="@Model.Image" height="100" width="100" />*@
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input class="btn btn-success pull-left" type="submit" value="Upload" id="btnsave" name="btnsave" onclick="return validateform();" />
                                    <a href="/Master/UploadFileList" class="btn btn-info">Back To List</a>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script>

    function validateform() {

        $(".errortext").removeClass("errortext");
        if ($('#Title').val() == '') {
            $("#Title").addClass('errortext');
            $('#Title').focus();
            return false;
        }

        if ($('#postedFile').val() == '') {
            $("#postedFile").addClass('errortext');
            $('#postedFile').focus();
            return false;
        }
    }

</script>