@model MyTrade.Models.User


@{
    ViewBag.Title = "Download";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

@using (Html.BeginForm("Download", "User", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="row layout-top-spacing">
            <div class="col-lg-12 col-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>Upload List</h4>
                                <span class="text-danger">
                                    @TempData["Download"]
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    Title
                                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @placeholder = "Title" })
                                </div>
                            </div>

                            <div class="col-md-3" style="margin-top:25px;">
                                <div class="form-group">
                                    <input class="btn btn-success pull-left" type="submit" value="Search" id="btnsearch" name="btnsearch" onclick="return validate();" />
                                </div>
                            </div>
                        </div>
                    
                            <table id="html5-extension" class="table table-hover non-hover" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>S No.</th>
                                        <th>Title</th>
                                        <th>Reward</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstReward != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstReward)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.Title</td>
                                                    <td>
                                                        <a href="@Item.Image" download>
                                                            @if (Item.Image.ToLower().Contains("jpg") || Item.Image.ToLower().Contains("jpeg") || Item.Image.ToLower().Contains("png") || Item.Image.ToLower().Contains("gif"))
                                                            {
                                                                <img src="@Item.Image" height="100" width="100" />
                                                            }
                                                            else
                                                            {
                                                                <iframe src="@Item.Image" height="100" width="100"></iframe>
                                                            }
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a href="@Item.Image" download>
                                                            <i class="fa fa-download" style="font-size:25px;color:#354a76">
                                                            </i>
                                                        </a>
                                                    </td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
}


